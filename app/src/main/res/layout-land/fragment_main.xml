<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_data_request"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_dimen"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_graph"
        app:layout_constraintEnd_toStartOf="@+id/cv_saved"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/default_dimen"
                android:drawableStart="@drawable/ic_system_update_black_24dp"
                android:text="@string/home_get_data"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_double_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_saved"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_dimen"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_data_request"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/default_dimen"
                android:drawableStart="@drawable/ic_restore_page_black_24dp"
                android:text="@string/home_saved"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_double_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_graph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_dimen"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cv_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_data_request">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/default_dimen"
                android:drawableStart="@drawable/ic_show_chart_black_24dp"
                android:text="@string/home_graph"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_double_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_dimen"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_graph"
        app:layout_constraintTop_toBottomOf="@+id/cv_saved">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/default_dimen"
                android:drawableStart="@drawable/ic_settings_black_24dp"
                android:text="@string/home_settings"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_double_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>