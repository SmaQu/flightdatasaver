<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image_axis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_dimen"
        android:src="@drawable/ic_exposure_zero_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_graph_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_axis"
        android:layout_alignTop="@+id/image_axis"
        android:layout_toEndOf="@+id/image_axis"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="@dimen/small_dimen"
        android:paddingStart="@dimen/small_dimen"
        tools:ignore="RelativeOverlap"
        tools:text="Graph option" />

    <CheckBox
        android:id="@+id/check_selected_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_graph_option"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/text_graph_option" />

</RelativeLayout>