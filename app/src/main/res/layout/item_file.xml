<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_dimen"
        android:src="@drawable/ic_description_black_24dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/iv_file"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/iv_file"
        android:layout_toEndOf="@+id/iv_file"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryVariant"
        tools:text="Is it working" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_file_name"
        android:layout_marginEnd="@dimen/default_dimen"
        android:layout_marginStart="@dimen/default_dimen"
        android:background="@color/colorAccent" />

</RelativeLayout>